<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tap_test_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context="com.example.a436.TapTestActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/timeLeft"
        android:textSize="20dp" />

    <TextView
        android:text="This will be testing the number of taps that you can do in 10 seconds. It will be testing both hands, first your left then your right. Please use the pointer finger to tap. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/instr"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="fill_parent"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="tryAgainButton"
        android:id="@+id/tryAgain"
        android:text="Next Trial"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="toRightHandButton"
        android:id="@+id/toRightHand"
        android:text="Right Hand Test"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="toResultsButton"
        android:id="@+id/toResults"
        android:text="Results"/>

    <Button
        android:layout_width="match_parent"
        android:layout_weight="9"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:onClick="tapButton"
        android:id="@+id/tap"
        android:text="Tap"/>



</LinearLayout>